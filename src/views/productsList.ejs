<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
    

    <body>
        <%- include('partials/header') %>
            <main>
                <section id="sectionMain">
                    <div id="divCat">
                        <ul type="none" id="categories">
                            <% categories.forEach(function(element,j){%>
                                <li class="filterCat"><%= element.cat_name%><input type="checkbox" name="" class="filtros" value="categoria<%= j+1 %>" checked="true"></li>
                            <% }) %>
                        </ul>
                    </div>
                    <div class="productos">
                        <% productos.forEach(function(element){ %>
                            <article class="producto categoria<%=element.cat_id%>">
                                <input type="number" class="category-drink articulo-valor" display="none" value="<%=element.cat_id%>">
                                <a class="hipervinculo-productos" href="/products/detail/<%= element.id%>">
                                    <img src="/image/<%= element.img %>">
                                    <div class="contenedor-articulo">
                                        <p class="nombre_producto">
                                            <%= element.name %>
                                        </p>
                                        <i class="fa-solid fa-cart-shopping"></i>
                                        <div class="precio_descripcion">
                                            <p class="precio"> $<%= element.price %>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </article>
                            <%})%>
                    </div>
                </section>
            </main>
            <%- include('partials/footer') %>
            <script src="/js/list.js"></script>
    </body>

</html>